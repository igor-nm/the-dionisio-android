<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/child_rock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genreRock"
        android:theme="@style/CustomTheme"
        android:onClick="selectedCheckFilter"
        android:layout_marginLeft="?android:attr/expandableListPreferredChildPaddingLeft" />

    <CheckBox
        android:id="@+id/child_electronic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genreElectronics"
        android:theme="@style/CustomTheme"
        android:onClick="selectedCheckFilter"
        android:layout_marginLeft="?android:attr/expandableListPreferredChildPaddingLeft" />

    <CheckBox
        android:id="@+id/child_sertanejo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genreSertanejo"
        android:theme="@style/CustomTheme"
        android:onClick="selectedCheckFilter"
        android:layout_marginLeft="?android:attr/expandableListPreferredChildPaddingLeft" />

    <CheckBox
        android:id="@+id/child_pagode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genrePagoda"
        android:theme="@style/CustomTheme"
        android:onClick="selectedCheckFilter"
        android:layout_marginLeft="?android:attr/expandableListPreferredChildPaddingLeft" />

</LinearLayout>